{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build and Run Betting Game",
			"type": "shell",
			"command": "mvn clean compile spring-boot:run",
			"group": "build",
			"isBackground": true,
			"problemMatcher": [
				"$maven-compiler-java"
			]
		},
		{
			"label": "Run Spring Boot Application",
			"type": "shell",
			"command": "java",
			"args": [
				"-cp",
				"target/classes:target/dependency/*",
				"com.bettinggame.BettingGameApplication"
			],
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		}
	]
}